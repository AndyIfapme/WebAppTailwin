@page
@model WebAppTailwin.Host.Pages.Admins.Vinyls.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Shared/_AdminLayout";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].PublishingHouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].DurationInSeconds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vinyl[0].IsAlbum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vinyl) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingHouse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationInSeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAlbum)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
