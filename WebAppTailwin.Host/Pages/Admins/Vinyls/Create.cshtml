@page
@model WebAppTailwin.Host.Pages.Admins.Vinyls.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "Shared/_AdminLayout";
}

<h1>Create</h1>

<h4>Vinyl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vinyl.Title" class="control-label"></label>
                <input asp-for="Vinyl.Title" class="form-control" />
                <span asp-validation-for="Vinyl.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.Description" class="control-label"></label>
                <input asp-for="Vinyl.Description" class="form-control" />
                <span asp-validation-for="Vinyl.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.PublishingHouse" class="control-label"></label>
                <input asp-for="Vinyl.PublishingHouse" class="form-control" />
                <span asp-validation-for="Vinyl.PublishingHouse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.DurationInSeconds" class="control-label"></label>
                <input asp-for="Vinyl.DurationInSeconds" class="form-control" />
                <span asp-validation-for="Vinyl.DurationInSeconds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.ReleaseDate" class="control-label"></label>
                <input asp-for="Vinyl.ReleaseDate" class="form-control" />
                <span asp-validation-for="Vinyl.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.ArtistId" class="control-label"></label>
                <select asp-for="Vinyl.ArtistId" class ="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.Type" class="control-label"></label>
                <select asp-for="Vinyl.Type" class="form-control"></select>
                <span asp-validation-for="Vinyl.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.Price" class="control-label"></label>
                <input asp-for="Vinyl.Price" class="form-control" />
                <span asp-validation-for="Vinyl.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Vinyl.IsAlbum" /> @Html.DisplayNameFor(model => model.Vinyl.IsAlbum)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Vinyl.File" class="control-label"></label>
                <input asp-for="Vinyl.File" class="form-control" />
                <span asp-validation-for="Vinyl.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
